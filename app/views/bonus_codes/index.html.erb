<div data-alert="true" id="bonus-valid" class="alert alert-success">Bonus is valid</div>
<div data-alert="true" id="bonus-not-sold" class="alert alert-warning">Bonus is not sold</div>
<div data-alert="true" id="bonus-not-found" class="alert alert-danger">Bonus is not found</div>

<h3>Check Your Product Bonus</h3>

<%= form_tag validate_bonus_path, method: :get, role: :form, class: 'form-inline', id: 'check-form', remote: true do %>
  <div class="form-group">
    <%= select_tag :product_id, options_from_collection_for_select(@products, :id, :name),
      prompt: "Select Product", class: 'form-control' %>
    <%= text_field_tag :bonus_code, '', placeholder: 'Enter Bonus Code', class: 'form-control' %>
    <%= submit_tag 'Validate', class: 'btn btn-success' %>
  </div>
<% end %>

